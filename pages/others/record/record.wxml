<kivicube-slam
  class="slam"
  version="v2"
  downgrade="{{true}}"
  bindready="ready"
  binderror="error"
/>

<view class="btn-group">
  <view class="time">
    {{ recorderStatus }} | {{ leftTime }}s
  </view>
  <button bindtap="startRecord" disabled="{{recordDisable}}">开始录制</button>
  <button bindtap="stopRecord">结束录制</button>
</view>