.slam {
  display: block;
  width: 100vw;
  height: 100vh;
}

.plane-tip {
  position: fixed;
  z-index: 2;
  bottom: 0;
  left: 0;
  display: flex;
  width: 100vw;
  height: 34.2vw;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(2.5px);
  background: rgba(255, 255, 255, 0.4);
  border-radius: 12px 12px 0 0;
  color: #fff;
  font-size: 4.27vw;
  opacity: 0.5;
  text-align: center;
  touch-action: none;
  transform: translateY(100%);
  transition: transform 0.6s, opacity 0.4s ease;
}

.plane-tip.visible {
  opacity: 1;
  transform: translateY(0);
}

.scan-image {
  width: 50%;
  text-align: right;
}
.scan-image image {
  width: 42.4vw;
  height: 15.47vw;
}

.scan-text {
  width: 50%;
}