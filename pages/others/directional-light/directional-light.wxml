<kivicube-slam
  class="slam"
  license="{{license}}"
  version="v2"
  bindready="ready"
  binderror="error"
/>

<view class="operate">
  <label>
    默认平行光强度：{{directionalIntensity}}
    <slider min="0" max="10" step="0.1" value="{{directionalIntensity}}" bindchange="directionalChange"></slider>
  </label>
  <label>
    默认平行光水平朝向：{{horizontal}}
    <slider min="1" max="360" step="1" value="{{horizontal}}" bindchange="horizontalChange"></slider>
  </label>
  <label>
    默认平行光垂直朝向：{{vertical}}
    <slider min="1" max="90" step="1" value="{{vertical}}" bindchange="verticalChange"></slider>
  </label>
</view>
