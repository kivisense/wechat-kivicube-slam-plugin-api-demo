.slam {
  display: block;
  width: 100vw;
  height: 100vh;
}

.operate {
  position: absolute;
  left: 10vw;
  bottom: 25vw;
  width: 80vw;
  z-index: 2;

  display: flex;
  flex-direction: column;
  align-items: center;

  text-align: center;
}

.operate label,
.operate slider {
  width: 100%;
}

.operate slider {
  margin: 10px 0 10px;
}

.operate button {
  width: 100%;
  margin-top: 4vw;
  font-size: 14px;
}