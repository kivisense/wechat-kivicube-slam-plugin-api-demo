.slam {
  display: block;
  width: 100vw;
  height: 100vh;
}

picker {
  position: absolute;
  left: 0;
  bottom: 10vh;
  width: 100%;
  z-index: 2;
  text-align: center;
}

.operate {
  position: absolute;
  left: 10vw;
  bottom: 25vw;
  width: 80vw;
  z-index: 2;

  display: flex;
  flex-direction: column;
  align-items: center;

  text-align: center;
}

.operate label,
.operate slider{
  width: 100%;
}

.operate slider {
  margin: 10px 0 10px;
}